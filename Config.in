menu "Build option"
comment "Set build configuration"
config ECL_CC
	string "Cross compiler path"
	default "/usr/bin/gcc"
config ECL_CFLAGS
	string "Cross compiler flags"
	default "-Wall -Werror"
config ECL_LD
	string "Linker path"
	default "/usr/bin/gcc"
config ECL_LDFLAGS
	string "Linker flags"
	default "-L."
config ECL_AR
	string "Archiver path"
	default "/usr/bin/ar"
config ECL_ARFLAGS
	string "Archiver flags"
	default ""
config ECL_STATIC
	bool "Compile static library"
	default n
config ECL_TEST
	bool "Compile test executable binary"
	default n
endmenu

source system/Config.in

source src/Config.in

